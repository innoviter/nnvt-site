---
import Header from '../components/organisms/Header.astro';
import Footer from '../components/organisms/Footer.astro';
import ConsentBanner from '../components/organisms/ConsentBanner.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const {
  title,
  description = 'Innoviter liefert maßgeschneiderte Softwareplattformen wie nachhaltige Softwareanwendungen, digitale Infrastrukturen und Systemarchitekturen und unterstützt Kunden dabei, zukunftsfähige Geschäftsmodelle auf Basis von Software zu schaffen.',
  lang = 'de-DE',
} = Astro.props;

const currentPath = Astro.url.pathname;
---
<!DOCTYPE html>
<html lang={lang} dir="ltr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <title>{title}</title>
</head>
<body>
  <Header currentPath={currentPath} />
  <main>
    <slot />
  </main>
  <Footer currentPath={currentPath} />
  <ConsentBanner />
</body>
</html>
